                android:id="@+id/tv_background_R"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10px">

            <TextView
                android:id="@+id/tv_background_G_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="background_G" />

            <SeekBar
                android:id="@+id/sb_background_G"
                android:layout_width="wrap_content"
