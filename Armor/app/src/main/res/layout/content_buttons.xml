<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_cmd_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="command_1"
        android:text="1" />

    <Button
        android:id="@+id/btn_cmd_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="command_2"
        android:text="2" />

    <Button
        android:id="@+id/btn_cmd_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="command_3"
        android:text="3" />

    <Button
        android:id="@+id/btn_cmd_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="command_4"
        android:text="4" />

    <Button
        android:id="@+id/btn_cmd_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="command_5"
        android:text="5" />

</LinearLayout>
