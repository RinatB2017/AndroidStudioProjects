<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.niqdev.ipcam"
    android:versionCode="8"
    android:versionName="1.5.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.github.niqdev.ipcam.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.niqdev.ipcam.IpCamDefaultActivity"
            android:label="@string/activity_ipcam_default"
            android:parentActivityName="com.github.niqdev.ipcam.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.niqdev.ipcam.MainActivity" />
        </activity>
        <activity
            android:name="com.github.niqdev.ipcam.IpCamTwoActivity"
            android:label="@string/activity_ipcam_two"
            android:parentActivityName="com.github.niqdev.ipcam.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.niqdev.ipcam.MainActivity" />
        </activity>
        <activity
            android:name="com.github.niqdev.ipcam.IpCamSnapshotActivity"
            android:label="@string/activity_ipcam_snapshot"
            android:parentActivityName="com.github.niqdev.ipcam.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.niqdev.ipcam.MainActivity" />
        </activity>
        <activity
            android:name="com.github.niqdev.ipcam.IpCamNativeActivity"
            android:label="@string/activity_ipcam_native"
            android:parentActivityName="com.github.niqdev.ipcam.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.niqdev.ipcam.MainActivity" />
        </activity>
        <activity
            android:name="com.github.niqdev.ipcam.settings.SettingsActivity"
            android:label="@string/activity_settings"
            android:parentActivityName="com.github.niqdev.ipcam.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.niqdev.ipcam.MainActivity" />
        </activity>
    </application>

</manifest>